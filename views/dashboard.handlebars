<div class="sidebar">
  <div class="goal-visual">
    <div id="day-total">

    </div>
  </div>
  <div class="new-post-wrapper">
    <form id="new-post-form">

      <label for="Calories">Calories</label>
      <input name="Calories" type="number" min="1" max="3000" />

      <label for="Description">Meal Description</label>
      <textarea name="Description" rows="5" cols="35" placeholder="(240 characters max)"></textarea>

      <label for="Time">When did you have this meal?</label>
      <input name="Time" type="datetime-local" />

      <button type="submit" class="post-submit">Post Meal</button>

    </form>
  </div>
</div>

<div class="posts-wrapper">
  <ul class="post-list">
    {{#each posts as |post|}}
    <li>
      <article class="posted-meal">

        <div class="left-post-wrapper">
          <div class="caloric-intake">
            {{post.calories}} Cal.
          </div>
          <div class="post-time">
            {{post.date_time}}
          </div>
        </div>

        <div class="right-post-wrapper">
          <div class="post-desc">
            {{post.meal_desc}}
          </div>
        </div>

      </article>
    </li>
    {{/each}}
  </ul>
</div>

<script src="/javascript/dashboard.js"></script>