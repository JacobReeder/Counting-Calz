<div class="container">
  <div class="row justify-content-around">
    <div class="col-md-5 col-sm-11 shadow border border-danger my-2">
      <form class="login-form">
        <h2 class="fs-3 text-danger text-center fw-bold border-bottom border-danger border-2 pb-3 my-3">
          Log In
        </h2>
        <div>
          <label for="email-login" class="fw-bold">Email:</label>
          <input type="email" id="email-login" class="form-control" />
        </div>
        <div>
          <label for="password-login" class="fw-bold">Password:</label>
          <input type="password" id="password-login" class="form-control"/>
        </div>
        <div>
          <button type="submit" class="btn-danger btn-lg">Login</button>
        </div>
      </form>
    </div>

    <div class="col-md-5 col-sm-11 shadow border border-danger my-2">
      <form class="signup-form">
        <h2 class="fs-3 text-danger text-center fw-bold border-bottom border-danger border-2 pb-3 my-3">
          Sign Up
        </h2>
        <div>
          <label for="username-signup" class="fw-bold">Username:</label>
          <input type="text" id="username-signup" class="form-control"/>
        </div>
        <div>
          <label for="email-signup" class="fw-bold">Email:</label>
          <input type="text" id="email-signup" class="form-control"/>
        </div>
        <div>
          <label for="password-signup" class="fw-bold">Password:</label>
          <input type="password" id="password-signup" class="form-control"/>
        </div>
        <div>
          <button type="submit" class="btn-danger btn-lg">Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/javascript/login.js"></script>